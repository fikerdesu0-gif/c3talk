{
  "short_name": "C3 Talk",
  "name": "C3 Talk – WhatsApp Voice Note to Text",
  "description": "C3 Talk converts WhatsApp voice notes into text instantly — with support for Amharic, Oromo and English translation.",
  "icons": [
    {
      "src": "/icons/icon.svg",
      "type": "image/svg+xml",
      "sizes": "any",
      "purpose": "any"
    }
  ],
  "id": "c3talk.app",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#000000",
  "orientation": "portrait",
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "files": [
        {
          "name": "media",
          "accept": ["audio/*", "audio/mp3", "audio/wav", "audio/ogg", "audio/m4a", "audio/mpeg", "audio/amr"]
        }
      ]
    }
  }
}
